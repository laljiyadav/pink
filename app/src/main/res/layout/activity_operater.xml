    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="com.pinkstar.main.Operater">

    <TextView
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorpink"
